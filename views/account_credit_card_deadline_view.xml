<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="account_credit_card_deadline_tree" model="ir.ui.view">
          <field name="name">account.credit.card.deadline.tree.pos</field>
          <field name="model">account.credit.card.deadline</field>
          <field name="inherit_id" ref="l10n_ec_payment.account_credit_card_deadline_tree"/>
          <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="available_in_pos" />
            </xpath>
          </field>
      </record>

      <record id="account_credit_card_deadline_form" model="ir.ui.view">
        <field name="name">account.credit.card.deadline.form.pos</field>
        <field name="model">account.credit.card.deadline</field>
          <field name="inherit_id" ref="l10n_ec_payment.account_credit_card_deadline_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='name']" position="after">
                  <field name="available_in_pos" />
              </xpath>
          </field>
      </record>
    </data>

</odoo>
